  <Canvas width="1080" height="1920" crop="left_upper" cropArea="0%,0%,45%,38%"/>
  
  <FacePart side="left" focus="upper" realism="photo-realistic">
    <Hair color="#FFF176" texture="spiky,glossy" subsurfaceScatter="true" dynamicMotion="true"/>
    <Skin tone="warm" microTexture="pores,fine-crease" subsurfaceScale="0.02" specular="soft"/>
    
